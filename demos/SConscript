import os
import sys

env=DefaultEnvironment().Clone()
BIN_DIR=os.environ['BIN_DIR'];

env.Program(os.path.join(BIN_DIR, 'demo_button'), ["button.cpp"]);
env.Program(os.path.join(BIN_DIR, 'demo_ui'), ["demoui.cpp"]);
env.Program(os.path.join(BIN_DIR, 'demo_basic'), ["basic.cpp"]);
env.Program(os.path.join(BIN_DIR, 'demo_basic1'), ["basic1.cpp"]);

sources = Glob('mvvm/*.cpp')
env.Program(os.path.join(BIN_DIR, 'mvvm_demo'), sources,  LIBS = env['LIBS']);
